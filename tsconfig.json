    "include": ["src"],
    "compilerOptions": {
        "lib": ["ES2022"],
        "module": "ES2022",
        "moduleResolution": "Node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "outDir": "./dist",
        "target": "ESNext",
    }
}